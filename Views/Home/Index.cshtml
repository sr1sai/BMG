@model BMG.Models.Customer

@{
    ViewData["Title"] = "Home Page";
    List<Account>? accounts = Model?.accounts;
}
<div class="main">
    <div class="navigation">
        <a asp-controller="Home" asp-action="NewAccount">New Account</a>
    </div>
    <div class="list">
        @if (accounts != null && accounts.Count > 0)
        {
        <table>
            <thead>
                <tr>
                    <th>S.No.</th>
                    <th>Account ID</th>
                    <th>Type</th>
                    <th>ROI</th>
                    <th>Balance</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < accounts.Count; i++)
                {
                <tr>
                    <td>@(i + 1)</td>
                    <td>@accounts[i].id</td>
                    <td>@accounts[i].type</td>
                    <td>@accounts[i].roi</td>
                    <td>@accounts[i].balance</td>
                    <td>
                        <form method="post" asp-controller="Home" asp-action="Select">
                            <div class="form-item">
                                  <input type="hidden" value="@accounts[i].id" id="id" name="id" />
                            </div>
                            <div class="form-item">
                                <input type="submit" value="Select" />
                            </div>
                        </form>
                    </td>
                </tr>
                }
            </tbody>
        </table>
        }
        else
        {
        <p>No accounts found.</p>
        }
    </div>
</div>
